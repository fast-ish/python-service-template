# Application
ENVIRONMENT=development
DEBUG=true
PORT=8000

# Security
API_KEY=
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

{%- if values.database == "aurora-postgresql" %}
# PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/app
{%- endif %}

{%- if values.database == "aurora-mysql" %}
# MySQL
DATABASE_URL=mysql+aiomysql://root:root@localhost:3306/app
{%- endif %}

{%- if values.database == "dynamodb" %}
# DynamoDB
DYNAMODB_ENDPOINT_URL=http://localhost:8000
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local
{%- endif %}

{%- if values.cache == "elasticache-redis" %}
# Redis
REDIS_URL=redis://localhost:6379/0
{%- endif %}

{%- if values.messaging == "sqs" or values.messaging == "sns-sqs" %}
# SQS
SQS_QUEUE_URL=
AWS_REGION=us-east-1
{%- endif %}

{%- if values.messaging == "sns-sqs" %}
# SNS
SNS_TOPIC_ARN=
{%- endif %}

# OpenTelemetry (Grafana)
OTEL_SERVICE_NAME=${{values.name}}
OTEL_SERVICE_VERSION=0.1.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp

{%- if values.aiClient == "openai" %}
# OpenAI
OPENAI_API_KEY=
{%- endif %}

{%- if values.aiClient == "anthropic" %}
# Anthropic
ANTHROPIC_API_KEY=
{%- endif %}
